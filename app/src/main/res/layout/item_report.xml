<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardElevation="@dimen/_5sdp"
        app:contentPadding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextReportItemTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_id"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/report_patient_id_text"
                        style="@style/TextReportItemData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy"
                        android:visibility="gone" />

                    <TextView
                        style="@style/TextReportItemTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/patient_name" />

                    <TextView
                        android:id="@+id/report_patient_name_text"
                        style="@style/TextReportItemData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextReportItemTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctor_id"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/report_doctor_id_text"
                        style="@style/TextReportItemData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy"
                        android:visibility="gone" />

                    <TextView
                        style="@style/TextReportItemTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/doctor_name" />

                    <TextView
                        android:id="@+id/report_doctor_name_text"
                        style="@style/TextReportItemData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:background="@color/colorAccent" />

            <TextView
                style="@style/TextReportItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_id" />

            <TextView
                android:id="@+id/report_id_text"
                style="@style/TextReportItemData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy" />

            <TextView
                style="@style/TextReportItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_request_date" />

            <TextView
                android:id="@+id/report_date_text"
                style="@style/TextReportItemData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy" />

            <TextView
                style="@style/TextReportItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_title" />

            <TextView
                android:id="@+id/report_title_text"
                style="@style/TextReportItemData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy" />

            <TextView
                style="@style/TextReportItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/report_description" />

            <TextView
                android:id="@+id/report_desc_text"
                style="@style/TextReportItemData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextReportItemTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/status" />

                    <TextView
                        android:id="@+id/report_status_text"
                        style="@style/TextReportItemData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/file_download_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_file_download"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>